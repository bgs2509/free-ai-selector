# =============================================================================
# AI Manager Platform - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Level 2 (Development Ready) configuration
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aimanager_db
POSTGRES_USER=aimanager_user
POSTGRES_PASSWORD=change_me_in_production

# Database URL for SQLAlchemy (async)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Data API Service (aimanager_data_postgres_api)
# -----------------------------------------------------------------------------
DATA_API_HOST=0.0.0.0
DATA_API_PORT=8001
DATA_API_LOG_LEVEL=DEBUG
DATA_API_RELOAD=false

# -----------------------------------------------------------------------------
# Business API Service (aimanager_business_api)
# -----------------------------------------------------------------------------
BUSINESS_API_HOST=0.0.0.0
BUSINESS_API_PORT=8000
BUSINESS_API_LOG_LEVEL=DEBUG
BUSINESS_API_RELOAD=false

# Data API endpoint (internal Docker network)
DATA_API_URL=http://aimanager_data_postgres_api:8001

# AI Provider API Keys
HUGGINGFACE_API_KEY=your_huggingface_token_here
REPLICATE_API_KEY=your_replicate_token_here
TOGETHER_AI_API_KEY=your_together_ai_token_here

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Telegram Bot Service (aimanager_telegram_bot)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_LOG_LEVEL=DEBUG

# Business API endpoint (internal Docker network)
BUSINESS_API_URL_BOT=http://aimanager_business_api:8000

# Bot settings
BOT_ADMIN_IDS=123456789,987654321
BOT_MAX_MESSAGE_LENGTH=4000

# -----------------------------------------------------------------------------
# Health Worker Service (aimanager_health_worker)
# -----------------------------------------------------------------------------
WORKER_LOG_LEVEL=DEBUG

# Check interval (in seconds)
HEALTH_CHECK_INTERVAL=3600

# Data API endpoint for worker
DATA_API_URL_WORKER=http://aimanager_data_postgres_api:8001

# Test prompt for synthetic monitoring
SYNTHETIC_TEST_PROMPT=Generate a simple greeting message

# -----------------------------------------------------------------------------
# Common Settings
# -----------------------------------------------------------------------------
# Environment (development, staging, production)
ENVIRONMENT=development

# Timezone
TZ=UTC

# Request ID header name
REQUEST_ID_HEADER=X-Request-ID
